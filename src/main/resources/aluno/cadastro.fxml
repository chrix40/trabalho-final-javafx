<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<FlowPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.sapiens.controllers.AlunoController">
    <children>
        <VBox prefHeight="352.0" prefWidth="503.0" spacing="15.0">
            <children>
                <HBox fillHeight="false" spacing="15.0">
                    <children>
                        <Label fx:id="id" />
                    </children>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
                </HBox>
                <HBox fillHeight="false" spacing="15.0">
                    <children>
                        <Label text="Nome do Aluno">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin></Label>
                        <TextField fx:id="nome">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin></TextField>
                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label text="Data de nascimento">
                     <padding>
                        <Insets left="15.0" />
                     </padding></Label>
                        <DatePicker fx:id="dataNascimento" prefWidth="150.0" />

                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
                </HBox>
                <HBox spacing="15.0">
                    <children>
                        <Label text="Curso">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin></Label>
                        <ChoiceBox fx:id="curso" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="75.0" />
                     </HBox.margin></ChoiceBox>
                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                </HBox>
                <Button onAction="#salvar" prefHeight="25.0" prefWidth="81.0" text="Salvar">
               <VBox.margin>
                  <Insets left="210.0" top="40.0" />
               </VBox.margin></Button>
            </children>
         <FlowPane.margin>
            <Insets left="85.0" top="100.0" />
         </FlowPane.margin>
        </VBox>
    </children>
</FlowPane>
